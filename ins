#!/usr/bin/env bash
set -e
ghp() { echo "$sha" | cut -c "$1" ; }

# net tweaks
sysctl -w net.ipv4.tcp_fastopen=3
sysctl -w net.core.somaxconn=8192
sysctl -w net.ipv4.tcp_timestamps=0
sysctl -w net.ipv4.tcp_ecn=1
sysctl -w net.ipv4.tcp_congestion_control=bbr

# ntp
sed -i -e 's/#FallbackNTP=.*/FallbackNTP=time.google.com/' \
       -e 's/#NTP=/NTP=/' /etc/systemd/timesyncd.conf
systemctl restart systemd-timesyncd

path='/tmp/njk'
curl -fLo "$path.tar.zst" 'https://github.com/nedorazrab0/arch-install/releases/download/rolling/njk.tar.zst'
echo
sha="$(openssl sha256 $path.tar.zst | cut -d ' ' -f2)"
shap="$(echo $(ghp 1-2)-$(ghp 3-5)-$(ghp 6-8)--$(ghp 9-10)-$(ghp 11-13)-$(ghp 14-16))"
echo "- SHA256 Part:  $shap"
read -p '- Press [Enter] to continue '

[[ -d "$path" ]] && rm -rf "$path"
mkdir -p "$path"
zstd -dc --rm "$path.tar.zst" | tar -xf - -C "$path"
bash "$path/main"
